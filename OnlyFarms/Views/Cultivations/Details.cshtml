@model OnlyFarms.Models.Cultivation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cultivation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Area In Hectar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaInHectar)
        </dd>
        <dt class="col-sm-2">
            Crop Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CropStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crop.CropName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Field)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Field.Tag)
        </dd>
        @if (ViewBag.harvestTime != null) {
            <dt class="col-sm-2">
                Excepted harvest time:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.harvestTime.ToString("dd/MM/yyyy")
            </dd>
        }

        @if (User.IsInRole("admin")) {
            <dt class="col-sm-2">
                Excepted gain:
            </dt>
            <dd class="col-sm-10">
                @if (@ViewBag.strategySelected == "true") {
                    @ViewBag.costBillanse @:zł
                }
                else {
                    @ViewBag.costBillanse
                }
            </dd>
            <dt class="col-sm-2">
                Profit calculation method:
            </dt>
            <dd class="col-sm-10">
                <button onclick="location.href = '/Cultivations/SelectRegularProfitCalculation/@Model.ID';">Normal</button>
                <button onclick="location.href = '/Cultivations/SelectWorkerlessProfitCalculation/@Model.ID';">Without workers costs</button>
                <button onclick="location.href = '/Cultivations/SelectSupplylessProfitCalculation/@Model.ID';">Without supplies costs</button>
            </dd>
        }
    </dl>

</div>
<div>
    @if (User.IsInRole("admin")) {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> @:|
    }
    <a asp-action="Index">Back to List</a>
</div>
