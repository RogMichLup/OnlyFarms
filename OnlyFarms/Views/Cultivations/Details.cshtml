@model OnlyFarms.Models.Cultivation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cultivation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Area In Hectar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaInHectar)
        </dd>
        <dt class="col-sm-2">
            Crop Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CropStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crop.CropName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Field)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Field.Tag)
        </dd>
        @if (ViewBag.harvestTime != null)
        {
            <dt class="col-sm-2">
                Excepted harvest time:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.harvestTime.ToString("dd/MM/yyyy")
            </dd>
        }

        @if (User.IsInRole("admin"))
        {
            <dt class="col-sm-2">
                Excepted gain:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.costBillanse zł (after sale all crop from this cultivation)
            </dd>
        }
    </dl>

</div>
<div>
    @if (User.IsInRole("admin")) {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> @:|
    }
    <a asp-action="Index">Back to List</a>
</div>
