@model OnlyFarms.Models.Crop

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Crop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Crop Name</label>
                <input asp-for="CropName" class="form-control" />
                <span asp-validation-for="CropName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Sell Price Per Tonne</label>
                <input asp-for="SellPricePerTonne" class="form-control" />
                <span asp-validation-for="SellPricePerTonne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Expected Yield (Tonnes Per Hectar)</label>
                <input asp-for="ExpectedYield" class="form-control" />
                <span asp-validation-for="ExpectedYield" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
