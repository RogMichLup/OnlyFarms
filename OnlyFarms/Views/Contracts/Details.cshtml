@model OnlyFarms.Models.Contract

@{
    ViewData["Title"] = "Details";
    int cropCount = 0;
}

<h1>Details</h1>

<div>
    <h4>Contract</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>

        <dt class="col-sm-2">
            Contract realization progress
        </dt>
        <dd class="col-sm-10">
            <table>
                <tr>
                    <td>Crop Name</td>
                    <td></td>
                    <td>Progress</td>
                    <td>Ammount</td>
                </tr>
                @for (int i = 0; i < Enumerable.Count(ViewBag.percentageOfContractCompletionList); i++) {
                    <tr>
                        <td>@ViewBag.names[i]</td>
                        <td>0</td>
                        <td><progress vertical-align="0" value="@ViewBag.percentageOfContractCompletionList[i]" max="100">@ViewBag.percentageOfContractCompletionList[i] %</progress></td>
                        <td>@ViewBag.maxx[i]</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
