@model OnlyFarms.Models.Field

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Field</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tag
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            Street
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            Field Surface In Hectar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldSurface)
        </dd>
        <dt class="col-sm-2">
            Cultivations
        </dt>
        <dd class="col-sm-10">
            @foreach (Cultivation item in ViewBag.cultivations) {
                @item.Crop.CropName<br />
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin")) {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> @:|
               }
    <a asp-action="Index">Back to List</a>
</div>
