@model OnlyFarms.Models.Field

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div style="float:left; width:500px">
        <h4>Field</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Tag)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tag)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Street)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Street)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FieldSurface)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FieldSurface)
            </dd>
            <dt class="col-sm-4">
                Cultivations
            </dt>
            <dd class="col-sm-8">
                @foreach (Cultivation item in ViewBag.cultivations)
                {
                    @item.Crop.CropName<br />
                }
            </dd>
        </dl>
    </div>
    @if (ViewBag.weather != null)
    {

        <div style="float:left">
            <div class="tile2" style="background-color:white">
                <div class="overlay">
                    <i class="icon-cloud-sun" style="font-size: 70px;"></i>
                    @ViewBag.weather.Date
                    <dl class="row">
                        <dt class="col-sm-2">
                            <i class="icon-thermometer" style="font-size: 30px;"></i>
                        </dt>
                        <dd class="col-sm-10" style="text-align:left">
                            @ViewBag.weather.Temperature °C
                        </dd>
                        <dt class="col-sm-2">
                            <i class="icon-water" style="font-size: 30px;"></i>
                        </dt>
                        <dd class="col-sm-10" style="text-align:left">
                            @ViewBag.weather.Moisture %
                        </dd>
                        <dt class="col-sm-2">
                            <i class="icon-gauge" style="font-size: 30px;"></i>
                        </dt>
                        <dd class="col-sm-10" style="text-align:left">
                            @ViewBag.weather.AirPressure hPa
                        </dd>
                        <dt class="col-sm-2">
                            <i class="icon-drizzle" style="font-size: 30px;"></i>
                        </dt>
                        <dd class="col-sm-10" style="text-align:left">
                            @ViewBag.weather.RainfallAmount mm
                        </dd>
                        <dt class="col-sm-2">
                            <i class="icon-direction" style="font-size: 30px;"></i>
                        </dt>
                        <dd class="col-sm-10" style="text-align:left">
                            @ViewBag.weather.WindDirection
                        </dd>
                        <dt class="col-sm-2">
                            <i class="icon-cloud-wind" style="font-size: 30px;"></i>
                        </dt>
                        <dd class="col-sm-10" style="text-align:left">
                            @ViewBag.weather.WindSpeed km/h
                        </dd>
                    </dl>
                    <a class="link" style="color:lightgoldenrodyellow;">
                        <i class="icon-spin4" style="font-size: 45px;" onclick="location.href = '/Fields/UpdateWeather/@Model.ID';"></i>  <h1>Odśwież</h1>
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div style="float:left">
            <div class="tile1" style="background-color:white">
                <div class="overlay1">
                    <i class="icon-cloud-sun" style="font-size: 70px;"></i>
                    <a class="link" onclick="location.href = '/Fields/UpdateWeather/@Model.ID';">
                        <h1 style="color: lightgoldenrodyellow">Pobierz</h1>
                    </a>
                </div>
            </div>
        </div>
    }
    <div style="clear:both"></div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

