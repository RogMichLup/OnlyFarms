@using Microsoft.AspNetCore.Http 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlyFarms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site3.css" />
    <link rel="stylesheet" href="~/css/fontello5.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">

</head>
<body>
    <header>
        <div class="text-center">
            <img src="~/logo.jpg" onclick="location.href='/Home';" />

            @if (Context.Session.GetString("HarvestObserver") != null)
            {
                <div style="position: absolute;">
                    <div class="tile2" style="background-color:white">
                        <div class="overlay">
                            <i class="icon-pagelines" style="font-size: 40px;">@Context.Session.GetString("HarvestObserver")</i>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <i class="icon-location" style="font-size: 30px;"></i>
                                </dt>
                                <dd class="col-sm-10" style="font-size: 30px; text-align: left">
                                    @Context.Session.GetString("HarvestObserverField")
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <i class="icon-edit" style="font-size: 30px;"></i>
                                </dt>
                                <dd class="col-sm-10" style="text-align:left">
                                    @Context.Session.GetString("HarvestObserverDetails")
                                </dd>
                            </dl>

                        </div>
                    </div>
                </div>
            }

            @if (Context.Session.GetString("FertilizationObserver") != null)
            {
                <div style="position: absolute; top: 500px; ">
                    <div class="tile2" style="background-color:white">
                        <div class="overlay">
                            <i class="icon-droplet" style="font-size: 40px;">@Context.Session.GetString("FertilizationObserver")</i>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <i class="icon-location" style="font-size: 30px;"></i>
                                </dt>
                                <dd class="col-sm-10" style="font-size: 30px; text-align: left">
                                    @Context.Session.GetString("FertilizationObserverField")
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <i class="icon-edit" style="font-size: 30px;"></i>
                                </dt>
                                <dd class="col-sm-10" style="text-align:left">
                                    @Context.Session.GetString("FertilizationObserverDetails")
                                </dd>
                            </dl>

                        </div>
                    </div>
                </div>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - OnlyFarms 
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
