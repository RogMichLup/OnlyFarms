@model IEnumerable<OnlyFarms.Models.Equipment>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Sprzęty</h1>
</div>

@foreach (var item in Model) {
    @if (item.Status == "Fine") {
        <div class="tile1" style="background-color: #00a651">
            <div class="overlay1">
                @Html.DisplayFor(modelItem => item.Name) <br />
                <i class="icon-cog-alt" style=" font-size: 70px;" onclick="location.href='Equipments/Details/@item.ID';"></i>
                <a class="link">
                    @if (User.IsInRole("admin")) {
                        <i class="icon-trash" style="position:absolute; left:5px; top:0; color:aliceblue;" onclick="location.href='Equipments/Delete/@item.ID';"></i>
                    }
                    <p style="color:aliceblue;">@Html.DisplayFor(modelItem => item.Name)</p>
                        <i class="icon-pencil" style="position:absolute; right:5px; top:0; color:aliceblue;" onclick="location.href='Equipments/Edit/@item.ID';"></i>
                    
                </a>
            </div>
        </div>
    }
    @if (item.Status == "For repair") {
        <div class="tile1" style="background-color: #ff0000">
            <div class="overlay1">
                @Html.DisplayFor(modelItem => item.Name) <br />
                <i class="icon-tools" style=" font-size: 70px;" onclick="location.href='Equipments/Details/@item.ID';"></i>
                <a class="link">
                    @if (User.IsInRole("admin")) {
                        <i class="icon-trash" style="position:absolute; left:5px; top:0; color:aliceblue;" onclick="location.href='Equipments/Delete/@item.ID';"></i>
                    }
                    <p style="color:aliceblue;">@Html.DisplayFor(modelItem => item.Name)</p>
                        <i class="icon-pencil" style="position:absolute; right:5px; top:0; color:aliceblue;" onclick="location.href='Equipments/Edit/@item.ID';"></i>
                    
                </a>
            </div>
        </div>
    }
    @if (item.Status == "For clean up") {
        <div class="tile1" style="background-color: #ffd800">
            <div class="overlay1">
                @Html.DisplayFor(modelItem => item.Name) <br />
                <i class="icon-bucket" style=" font-size: 70px;" onclick="location.href='Equipments/Details/@item.ID';"></i>
                <a class="link">
                    @if (User.IsInRole("admin")) {
                        <i class="icon-trash" style="position:absolute; left:5px; top:0; color:aliceblue;" onclick="location.href='Equipments/Delete/@item.ID';"></i>
                    }
                    <p style="color:aliceblue;">@Html.DisplayFor(modelItem => item.Name)</p>
                        <i class="icon-pencil" style="position:absolute; right:5px; top:0; color:aliceblue;" onclick="location.href='Equipments/Edit/@item.ID';"></i>
                    
                </a>
            </div>
        </div>
    }

}
@if (User.IsInRole("admin")) {
    <div class="tile1" onclick="location.href='Equipments/Create';">
        <div class="overlay1">
            <i class="icon-plus" style=" font-size: 70px;"></i>
        </div>
    </div>
}